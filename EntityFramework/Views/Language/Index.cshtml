@model CreateLanguageViewModel

<div>
    <div>
        <h2>List of Languages and People</h2>
        <div>
            <partial name="_ListLanguagePartial" model="Model.LanguageList" />
        </div>
        <div>
            <partial name="_ListPersonPartial" model="Model.PeopleList" />
        </div>
    </div>
    <div>
        <form asp-action="CreateLanguage" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LangName" class="control-label"></label><br />
                <input asp-for="LangName" class="form-control">
                <span asp-validation-for="LangName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div>
        <form asp-action="CreateLanguageBond" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LangID" class="control-label"></label><br />
                <input asp-for="LangID" class="form-control">
                <span asp-validation-for="LangID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonID" class="control-label"></label><br />
                <input asp-for="PersonID" class="form-control">
                <span asp-validation-for="PersonID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>