@model List<Country>

<div>
    <h3>Exsisting countrys</h3>
    <table>
        <thead>
            <tr>
                <th>Country ID</th>
                <th>Country Name</th>
                <th>Country Cities</th>
            </tr>
        </thead>
        <tbody>
            @{
                if (Model != null)
                {
                    foreach (var Country in Model)
                    {
                        <tr>
                            <td>@Country.CountryID</td>
                            <td>@Country.CountryName</td>
                            <td>@Country.Cities</td>
                            <td>@Html.ActionLink("Remove", "Remove", "Country", new { id = Country.CountryID })</td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
</div>